<?xml version="1.0" encoding="UTF-8"?>
<module rename-to="circuitjs1">
    <inherits name="com.google.gwt.user.User" />
    <inherits name="com.google.gwt.http.HTTP" />
    <inherits name='com.google.gwt.user.theme.clean.Clean'/>
    <inherits name="com.google.gwt.logging.Logging"/>
    <set-property name="gwt.logging.enabled" value="TRUE" />
    <set-property name="gwt.logging.logLevel" value="INFO" />

    <!-- Speed up compilation during development by limiting to one browser -->
    <!-- Comment out these lines for production builds -->
    <set-property name="user.agent" value="safari"/>    
    <set-property name="locale" value="default"/>
    
    <!-- Enable readable output with line numbers for debugging -->
    <set-property name="compiler.stackMode" value="emulated"/>
    <set-configuration-property name="compiler.emulatedStack.recordLineNumbers" value="true"/>

    <entry-point class="com.lushprojects.circuitjs1.client.circuitjs1" />
    <stylesheet src='style.css' />
    <!-- Specify the paths for translatable code                    -->
    <source path='client'/>
    <!-- allow Super Dev Mode -->
    <add-linker name="xsiframe"/>
</module>
